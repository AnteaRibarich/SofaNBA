<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_month"
        style="@style/HeadlineSmallNLv2Left"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="October 2021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_background"
        android:layout_width="344dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/background_curved_16dp_radius"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_month"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_background_team_left"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_curved_16dp_radius"
        android:backgroundTint="@color/status_success"
        android:elevation="4dp"
        android:src="@drawable/ic_action_name"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background" />

    <ImageView
        android:id="@+id/image_team_left"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:elevation="4dp"
        android:src="@drawable/assets_exportable_logos_club_logos_eastern_conference_charlotte_hornets_transparent"
        app:layout_constraintBottom_toBottomOf="@id/view_background_team_left"
        app:layout_constraintEnd_toEndOf="@id/view_background_team_left"
        app:layout_constraintStart_toStartOf="@id/view_background_team_left"
        app:layout_constraintTop_toTopOf="@id/view_background_team_left" />

    <TextView
        android:id="@+id/text_team_left"
        style="@style/AssistiveNLv1Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginTop="6dp"
        android:text="BKN"
        app:layout_constraintEnd_toEndOf="@id/view_background_team_left"
        app:layout_constraintStart_toStartOf="@id/view_background_team_left"
        app:layout_constraintTop_toBottomOf="@id/view_background_team_left" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday, 19 Oct 2021"
        style="@style/DescriptionNLv1Center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background"
        android:elevation="4dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/text_result_left"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:text="88"
        style="@style/DisplayLargeNLv1Center"
        app:layout_constraintEnd_toStartOf="@id/text_minus"
        app:layout_constraintTop_toTopOf="@id/text_minus"
        android:elevation="4dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_minus"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:text="-"
        style="@style/DisplayLargeNLv1Center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/text_result_right"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:text="88"
        style="@style/DisplayLargeNLv1Center"
        app:layout_constraintStart_toEndOf="@id/text_minus"
        app:layout_constraintTop_toTopOf="@id/text_minus"
        android:elevation="4dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DescriptionNLv2Center"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintBottom_toBottomOf="@id/view_background"
        android:elevation="4dp"
        android:textAllCaps="true"/>

    <View
        android:id="@+id/view_background_team_right"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_curved_16dp_radius"
        android:backgroundTint="@color/status_success"
        android:elevation="4dp"
        android:src="@drawable/ic_action_name"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@id/view_background" />

    <ImageView
        android:id="@+id/image_team_right"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:elevation="4dp"
        android:src="@drawable/assets_exportable_logos_club_logos_eastern_conference_charlotte_hornets_transparent"
        app:layout_constraintBottom_toBottomOf="@id/view_background_team_right"
        app:layout_constraintEnd_toEndOf="@id/view_background_team_right"
        app:layout_constraintStart_toStartOf="@id/view_background_team_right"
        app:layout_constraintTop_toTopOf="@id/view_background_team_right" />

    <TextView
        android:id="@+id/text_team_right"
        style="@style/AssistiveNLv1Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="BKN"
        app:layout_constraintEnd_toEndOf="@id/view_background_team_right"
        app:layout_constraintStart_toStartOf="@id/view_background_team_right"
        app:layout_constraintTop_toBottomOf="@id/view_background_team_right" />

</androidx.constraintlayout.widget.ConstraintLayout>