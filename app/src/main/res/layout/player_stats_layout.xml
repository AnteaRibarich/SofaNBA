<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface1">

    <TextView
        android:id="@+id/text_category"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="ons"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/HeadlineSmallNLv1Left"
        android:textAllCaps="true"
        android:textColor="@color/neutrals_n_lv_1"
        android:elevation="8dp" />

    <TextView
        android:id="@+id/text_season_0"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="98dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BodyMediumNLv1Center"
        android:textColor="@color/neutrals_n_lv_1"
        android:text="000"
        android:gravity="center"
        android:background="@drawable/background_curved_8dp_radius" />

    <TextView
        android:id="@+id/text_season_1"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="164dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BodyMediumNLv1Center"
        android:textColor="@color/neutrals_n_lv_1"
        android:background="@drawable/background_curved_8dp_radius"
        android:text="000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_season_2"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="224dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BodyMediumNLv1Center"
        android:textColor="@color/neutrals_n_lv_1"
        android:background="@drawable/background_curved_8dp_radius"
        android:text="000"
        android:gravity="center" />

    <TextView
        android:id="@+id/text_season_3"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="284dp"
        android:text="000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BodyMediumNLv1Center"
        android:textColor="@color/neutrals_n_lv_1"
        android:background="@drawable/background_curved_8dp_radius"
        android:gravity="center" />

    <View
        android:layout_width="344dp"
        android:layout_height="1dp"
        android:background="?attr/colorNLv3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>